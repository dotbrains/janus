# ==========================================
# Template Environment Configuration
# ==========================================
# This file uses {{PLACEHOLDER}} syntax for values that should be customized.
# The initialization script will update these automatically.
#
# After running the initialization script, copy this to .env and update:
#   cp .env.template .env
#
# NEVER commit .env file to version control!
# ==========================================

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/{{DATABASE_NAME}}
DATABASE_USERNAME={{DATABASE_USERNAME}}
DATABASE_PASSWORD={{DATABASE_PASSWORD}}
DATABASE_DRIVER=org.postgresql.Driver

# ==========================================
# Keycloak OAuth2 Configuration
# ==========================================
# Client ID should match your Keycloak client configuration
KEYCLOAK_CLIENT_ID={{PROJECT_NAME}}-client

# Get this from Keycloak Admin Console > Clients > Your Client > Credentials tab
KEYCLOAK_CLIENT_SECRET={{KEYCLOAK_CLIENT_SECRET}}

# Update realm name to match your Keycloak realm
KEYCLOAK_ISSUER_URI=http://localhost:8080/realms/{{KEYCLOAK_REALM}}
KEYCLOAK_AUTH_URI=http://localhost:8080/realms/{{KEYCLOAK_REALM}}/protocol/openid-connect/auth
KEYCLOAK_TOKEN_URI=http://localhost:8080/realms/{{KEYCLOAK_REALM}}/protocol/openid-connect/token
KEYCLOAK_USER_INFO_URI=http://localhost:8080/realms/{{KEYCLOAK_REALM}}/protocol/openid-connect/userinfo
KEYCLOAK_JWK_URI=http://localhost:8080/realms/{{KEYCLOAK_REALM}}/protocol/openid-connect/certs

# ==========================================
# Application Configuration
# ==========================================
SERVER_PORT={{SERVER_PORT}}
JWT_ISSUER=http://localhost:{{SERVER_PORT}}

# CORS Configuration - Add your frontend URLs
# Separate multiple origins with commas
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

